generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String         @id @default(uuid())
  fullName  String
  email     String         @unique
  status    CustomerStatus @default(ACTIVE)
  createdAt DateTime       @default(now())

  accounts  Account[]
  notes     Note[]
  flags     Flag[]
}

model Account {
  id         String        @id @default(uuid())
  type       String
  balance    Decimal       @db.Decimal(14, 2)
  status     AccountStatus @default(OPEN)
  createdAt  DateTime      @default(now())

  customerId String
  customer   Customer     @relation(fields: [customerId], references: [id])

  transactions Transaction[]

  @@index([customerId])
}

model Transaction {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(14, 2)
  createdAt DateTime @default(now())

  accountId String
  account   Account  @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model Note {
  id         String   @id @default(uuid())
  content    String
  createdAt  DateTime @default(now())

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  @@index([customerId])
}

model Flag {
  id         String       @id @default(uuid())
  reason     String
  severity   FlagSeverity @default(LOW)
  createdAt  DateTime     @default(now())

  customerId String
  customer   Customer     @relation(fields: [customerId], references: [id])

  @@index([customerId])
}

enum CustomerStatus {
  ACTIVE
  FROZEN
}

enum AccountStatus {
  OPEN
  CLOSED
}

enum FlagSeverity {
  LOW
  MEDIUM
  HIGH
}
